<p id="notice"><%= notice %></p>

<%=form_tag users_path, :method=> 'get' do  %>
<%=text_field_tag :search ,params[:search]  %>
<%=submit_tag"Search"  %>
  <% end %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<a href="/"> Home</a> <a href="/projects"> Get Funded</a> <a href="/categories"> explore</a>
<% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :style=> 'color:#6a6a6a;', :class => 'btn btn-primary m-1'%>
<%else%>
  <a href="/users/sign_in" class="btn btn-primary m-1"  role="button">Log in</a>
<%end%>
